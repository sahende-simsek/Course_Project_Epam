{
  "name": "course-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit --runInBand",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:contract": "jest --testPathPattern=tests/contract",
    "test:e2e": "npx playwright test",
    "coverage": "jest --coverage --coverageDirectory=coverage",
    "dev:server": "npx tsc && node ./scripts/dev-server.js",
    "mutate": "npx stryker run"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "@prisma/client": "^4.16.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "prisma": "^4.16.0",
    "typescript": "^4.9.5",
    "@types/jest": "^29.5.2",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "msw": "^0.49.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.2"
  },
  "lint-staged": {
    "src/**/*.ts": ["npm run lint -- --fix", "git add"]
  }
}
